<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/linearLayout_login"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:paddingLeft="12dp"
android:paddingRight="12dp"
android:paddingTop="16dp"
android:weightSum="10"
android:background="@color/colorBackground"

tools:context=".ProfileActivity">

<!--    <ImageView-->
<!--        android:layout_width="320dp"-->
<!--        android:layout_height="100dp"-->
<!--        android:layout_gravity="center"-->
<!--        android:src="@drawable/logo2"></ImageView>-->


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="127dp"
        android:src="@drawable/logo2"></ImageView>

<RelativeLayout
    android:layout_width="330dp"
    android:layout_height="400dp"
    android:layout_gravity="center">


    <ImageView
        android:id="@+id/profile_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/relativeLayout_img"
        android:layout_alignLeft="@+id/relativeLayout_img"
        android:layout_marginStart="-27dp"
        android:layout_marginLeft="-27dp"
        android:src="@drawable/activity_profile_user"></ImageView>

    <LinearLayout
        android:id="@+id/relativeLayout_img"
        android:layout_width="296dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"

        android:layout_marginStart="30dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="43dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_email_profile"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/textView_name_profile"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="이름"
            android:textSize="20dp"

            ></TextView>

        <EditText
            android:id="@+id/editText_phoneNum_profile"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:enabled="false"
            android:text="전화번호"
            android:textSize="20dp"

            ></EditText>

        <EditText
            android:id="@+id/editText_carNum_profile"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:enabled="false"
            android:text="차량 번호"
            android:textSize="20dp"


            ></EditText>

        <EditText
            android:id="@+id/editText_carType_profile"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:enabled="false"
            android:text="차종"

            android:textSize="20dp"></EditText>


        >
    </LinearLayout>

</RelativeLayout>


<LinearLayout
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1"
    android:layout_gravity="center">

    <Button
        android:id="@+id/btn_modifyProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/imgbtn_states"
        android:text="회원 정보 수정"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:textSize="15dp"

        ></Button>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:clickable="false"
        android:enabled="false"
        android:background="@drawable/imgbtn_states"
        android:text="변경사항 저장"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:textSize="15dp"
        ></Button>

    ></LinearLayout>

></LinearLayout>
